<body>
    <div id = "app">
        <transition
            name = "fade"
            enter-active-class = "animated rubberBand"
            leave-active-class = "animated swing"
        >
        <div v-if="show">hahhahahahahah</div>
        </transition>

        <button @click="handleClick">切换</button>
    </div>
    <script>
        var vm = new Vue({
            el : "#app",
            data:{
                show:true
            },
            methods:{
                handleClick:function () {
                    this.show = !this.show;
                }
            }
        })
    </script>
